rtmp_auto_push on;
rtmp_auto_push_reconnect 1s;

daemon off;
worker_processes 1;

# XXX: add pid

events {
   worker_connections 1024;
}

rtmp_socket_dir ${:home-directory};

rtmp {
  server {
    listen ${:backend-ip}:${:backend-port};
    allow publish all;
    allow play all;

    application easicloud {
      live on;
    }
  }
}

